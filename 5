#include <stdio.h>

int add(int x, int y) {
    int s = 0;
    s = x + y;
    return s;
}

int min(int x, int y) {
    int s = 0;
    s = x - y;
    return s;
}

int mul(int x, int y) {
    int s = 0;
    s = x * y;
    return s;
}

float div(float x, float y) {
    float s = 0;
    s = x / y;
    return s;
}

int select_menu() {
    int choice;
    do {
        printf("아래의 메뉴 중 원하는 메뉴 번호를 하나 선택하세요.\n");
        printf("1. 덧셈\n");
        printf("2. 뺄셈\n");
        printf("3. 곱셈\n");
        printf("4. 나눗셈\n");
        scanf("%d", &choice);
    } while (choice < 1 || choice > 4);
    return choice;
}

float arithm_op(int i, int s, int x, int y) {
    switch (i) {
        case 1:
            s = add(x, y);
            printf("덧셈: %d\n", s);
            break;
        case 2:
            s = min(x, y);
            printf("뺄셈: %d\n", s);
            break;
        case 3:
            s = mul(x, y);
            printf("곱셈: %d\n", s);
            break;
        case 4:
            printf("나눗셈: %.2f\n", div((float)x, (float)y));
            break;
    }
    return 0;
}

int get_operand(int *x, int *y) {
    printf("첫 번째 정수를 입력: \n");
    scanf("%d", x);
    printf("두 번째 정수를 입력: \n");
    scanf("%d", y);
    return 0;
}

int main(void) {
    int x, y, i, s = 0;
    i = select_menu();
    get_operand(&x, &y);
    arithm_op(i, s, x, y);
    return 0;
}
